#include <stdio.h>
#include<string.h>
int main() {
    char a[100];
    scanf("%s",a);
int n,i,j;
n=strlen(a);
for(i=0;i<n;i++)
{
   for(j=0;j<n;j++)
   {
       if(j==i||j+i==n-1)
       printf("%c",a[j]);
       else
       {
           printf(" ");
       }
   }
   
   printf("\n");
}
return 0;
}
